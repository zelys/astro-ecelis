---
// Education.astro
import Card from '../ui/Card.astro';
---

<section id="educacion" class="section-primary">
  <div class="container">
    <h2>Educación</h2>
    <div class="education-container">
      <Card className="education-card">
        <h3>Analista Programador Computacional</h3>
        <p class="institution">Instituto Profesional de Chile (IP CHILE)</p>
        <p class="years">2023 - 2025</p>
        <p class="description">
          Formación integral en análisis, diseño y desarrollo de sistemas informáticos, con énfasis en metodologías ágiles, programación orientada a objetos y gestión de bases de datos.
        </p>
      </Card>
    </div>
  </div>
</section>

<style>
  section {
    padding: 5rem 0;
    position: relative;
    z-index: 2; /* Asegurar que esté por encima de efectos parallax */
  }

  h2 {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
    color: var(--text-primary);
  }

  h2::after {
    content: '';
    display: block;
    width: 80px;
    height: 4px;
    background-color: var(--primary-blue);
    margin: 1rem auto 0;
  }

  .education-container {
    display: flex;
    justify-content: center;
  }

  :global(.education-card) {
    max-width: 800px;
    text-align: left;
  }

  h3 {
    color: var(--primary-blue);
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .institution {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .years {
    font-weight: 600;
    font-style: italic;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .description {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    section {
      padding: 3rem 0;
    }

    h2 {
      font-size: 2rem;
    }
  }
</style>